<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00FFFFFF"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="20dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_xanhla_02"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/xam3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-100dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="100dp"
            app:cardElevation="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/xam3"
            android:text="My address is"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="106/3/5 Pham Van Chieu"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold" />
        <ImageView
            android:textAlignment="center"
            android:id="@+id/imgScrollBar"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="9dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/scroll_bar_horizontal_green"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnMagicBall"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/margic_ball_grey"/>

            <ImageView
                android:id="@+id/btnCalendar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/canlendar_grey"/>

            <ImageView
                android:id="@+id/btnMap"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/mao_green"/>

            <ImageView
                android:id="@+id/btnPhone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/phone_grey"/>

            <ImageView
                android:id="@+id/btnLock"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/lock_grey"/>

        </LinearLayout>


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="15dp"
                android:src="@drawable/btn_incorress"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/btn_like_green"/>

            <ImageView
                android:id="@+id/btnRight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:src="@drawable/btn_corress"/>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>


</LinearLayout>